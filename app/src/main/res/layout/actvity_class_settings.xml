                <Button
                    android:id="@+id/startClassButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Start Class"
                    android:textSize="30sp" />
            </LinearLayout>
    </RelativeLayout>

</RelativeLayout>