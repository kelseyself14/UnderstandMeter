<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3a3a3a"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/classnameview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Name:"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/className"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Enter Class Name"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="@dimen/settings_font_size_sm" />

            <TextView
                android:id="@+id/numberstudentsview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Students:"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/numStudents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Number of Students"
                android:inputType="number"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/warningpercentageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warning Threshold:"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/warningPercentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Number"
                android:inputType="number"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="25sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dip"/>

            <CheckBox
                android:id="@+id/departureAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alert if Student Leaves?"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dip" />

            <TextView
                android:id="@+id/numberalertview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number for Alerts:"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="123-456-7890"
                android:inputType="phone"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="25sp" />

            <Button
                android:id="@+id/startClassButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Start Class"
                android:textSize="30sp" />
        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>